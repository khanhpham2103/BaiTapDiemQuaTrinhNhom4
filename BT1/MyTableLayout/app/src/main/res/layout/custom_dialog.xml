<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="8"
        android:text="Inspired by the works of artists such as Piet Mondrian and Ben Nicholson.\n
                     \n
                     Made by Nhóm 4                      \n
                     Nguyễn Hửu Trọng                     \n
                     Nguyễn Minh Tiến                     \n
                     Phạm Phú Khánh                       \n
                     "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="45px" />

    <TextView
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60px"
        android:text="Click below to learn more"
        android:textAlignment="center"
        android:textSize="40px" />

    <LinearLayout
        android:layout_marginTop="60px"
        android:paddingBottom="50px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/visitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110px"
            android:text="Visit MOMA"
            android:textAlignment="center"
            android:textSize="40px" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/notNowButton"
            android:layout_marginLeft="220px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Now"
            android:textAlignment="center"
            android:textSize="40px" />
    </LinearLayout>
</LinearLayout>